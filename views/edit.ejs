<% include ./layouts/header.ejs %>
<% include ./layouts/nav.ejs %>
<div class="container" style="margin-top: 70px">
  <div class="row">
    <form class="col-md-8 col-md-offset-2" autocomplete="on" action="/sent" method="post" style="background-color: #00BCD4;
    padding: 30px;
    border-radius: 5px;"> 

      <div class="form-group"> <!-- Subject field -->
        <label class="control-label " for="title">Title</label>
        <input class="form-control" style="border: 1px solid" required id="title" name="title" type="text" value="<%= post.title %>"/>
      </div>
      
      <div class="form-group"> <!-- Message field -->
        <label class="control-label " for="message">Message</label>
        <textarea class="form-control" required cols="40" id="message" name="message" rows="5" style="border: 1px solid"><%= post.message%></textarea>
      </div>
    
      <div class="form-group">
        <input class="btn btn-primary " type="submit" id="submitBtn" value="Update">
      </div>
    </div>
  </form>    
</div>
           
